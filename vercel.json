{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/assets/(.*)", "dest": "client/dist/assets/$1" },
    { "src": "/TamilNadu_Logo.svg.png", "dest": "client/dist/TamilNadu_Logo.svg.png" },
    { "src": "/(.*)", "dest": "client/dist/index.html" }
  ]
}
