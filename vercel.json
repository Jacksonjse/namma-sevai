{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      },
      {
        "src": "server/server.js",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/server/server.js"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ],
    "crons": [
      {
        "path": "/api/complaints/auto-delete-resolved",
        "schedule": "0 0 * * *"
      }
    ]
  }