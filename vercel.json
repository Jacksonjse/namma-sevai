{
  "version": 2,
  "builds": [
    {
      "src": "client/vercel.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/TamilNadu_Logo.svg.png",
      "destination": "/TamilNadu_Logo.svg.png"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}